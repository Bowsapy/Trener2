<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trener.Tech1Page"
             Title=""
                          xmlns:lang="clr-namespace:Trener.Resources.Languages"

                          xmlns:local="clr-namespace:Trener"

             >
    <ContentPage.BindingContext>
        <local:YourViewModel />
    </ContentPage.BindingContext>


    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="gym.png"
  HorizontalOptions="FillAndExpand"
  VerticalOptions="FillAndExpand"
               Grid.Column ="0"
               Grid.Row="0"
               Grid.ColumnSpan="2"
               Grid.RowSpan="5"
               HeightRequest="1000"
                Aspect="AspectFill" 
 
  />

        <Button Text="{x:Static lang:objectsStrings.BasicStrikesButton}"
                 BackgroundColor="red"
                 TextColor="White"
                 BorderColor="White"
                 Margin="10,10"
                 BorderWidth="2" 
                 FontAttributes="Bold"
                 Grid.Row="0"
                 Grid.Column="0"
                          LineBreakMode="WordWrap"
                          Command="{Binding StartTechWorkout}" 
      CommandParameter="BASIC STRIKES"
                      x:Name="BasicStrikesButton"
                                Grid.ColumnSpan="2"
                FontSize="20"

                 />

        <Button Text="{x:Static lang:objectsStrings.BasicDefenceButton}"
                 BackgroundColor="red"
                 TextColor="White"
                 BorderColor="White"
                 Margin="10,10"
                 BorderWidth="2" 
                 FontAttributes="Bold"
                 Grid.Row="1"
                 Grid.Column="0"
                          LineBreakMode="WordWrap"
                                     Command="{Binding StartTechWorkout}" 
                                       x:Name="BasicDefenceButton"
                                Grid.ColumnSpan="2"
                FontSize="20"

CommandParameter="BASIC DEFENCE"
                 />

        <Button Text="{x:Static lang:objectsStrings.BasicMovementButton}"
                 BackgroundColor="Red"
                 TextColor="White"
                 BorderColor="White"
                 Margin="10,10"
                 BorderWidth="2" 
                 FontAttributes="Bold"
                 Grid.Row="2"
                 Grid.Column="0"

                          LineBreakMode="WordWrap"
                                     Command="{Binding StartTechWorkout}" 
                                       x:Name="BasicMovementButton"
                                Grid.ColumnSpan="2"
                FontSize="20"

CommandParameter="BASIC MOVEMENT"
                 />
        <Button Text="{x:Static lang:objectsStrings.AllButton}"
           BackgroundColor="Red"
           TextColor="White"
           BorderColor="White"
           Margin="10,10"
           BorderWidth="2" 
           FontAttributes="Bold"
           Grid.Row="3"
           Grid.Column="0"
                    LineBreakMode="WordWrap"
                    Command="{Binding StartTechWorkout}" 
CommandParameter="BASIC ALL"
                                                        x:Name="AllButton"
                Grid.ColumnSpan="2"
                FontSize="20"
           />


        
    </Grid>

    <!-- Obrázek -->
  
</ContentPage>
