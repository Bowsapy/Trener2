<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trener.StylesPage"
             Title=""
                                                                 xmlns:local="clr-namespace:Trener"
                          xmlns:lang="clr-namespace:Trener.Resources.Languages"


             >

    <ContentPage.BindingContext>
        <local:YourViewModel />
    </ContentPage.BindingContext>



    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="gym.png"
  HorizontalOptions="FillAndExpand"
  VerticalOptions="FillAndExpand"
               Grid.Column ="0"
               Grid.Row="0"
               Grid.RowSpan="5"
               HeightRequest="1000"
                Aspect="AspectFill" 
 
  />

        <!-- Tlačítka -->


        <Button Text="{x:Static lang:objectsStrings.CounterPuncherButton}"
                 BackgroundColor="red"
                 TextColor="White"
                 BorderColor="White"
                 Margin="10,10"
                 BorderWidth="2" 
                 FontAttributes="Bold"
                 Grid.Row="0"
                 Grid.Column="0"
                FontSize="20"
                          LineBreakMode="WordWrap"
                                                      Command="{Binding StartTechWorkout}" 
CommandParameter="COUNTER PUNCHER"
                                                      x:Name="CounterPuncherButton"

                 />

        <Button Text="{x:Static lang:objectsStrings.SwitchHitterButton}"
                 BackgroundColor="red"
                 TextColor="White"
                 BorderColor="White"
                 Margin="10,10"
                 BorderWidth="2" 
                 FontAttributes="Bold"
                 Grid.Row="1"
                 Grid.Column="0"
                                FontSize="20"

                          LineBreakMode="WordWrap"
                                                      Command="{Binding StartTechWorkout}" 
CommandParameter="SWITCH HITTER"
                                      x:Name="SwitchHitterButton"

                 />

        <Button Text="{x:Static lang:objectsStrings.PressureFighterButton}"
                 BackgroundColor="Red"
                 TextColor="White"
                 BorderColor="White"
                 Margin="10,10"
                 BorderWidth="2" 
                 FontAttributes="Bold"
                 Grid.Row="2"
                 Grid.Column="0"
                                FontSize="20"

                          LineBreakMode="WordWrap"
                                                      Command="{Binding StartTechWorkout}" 
CommandParameter="PRESSURE FIGHTER"
                                                       x:Name="PressureFighterButton"


                 />

        <Button Text="{x:Static lang:objectsStrings.LongRangeButton}"
           BackgroundColor="Red"
           TextColor="White"
           BorderColor="White"
           Margin="10,10"
           BorderWidth="2" 
           FontAttributes="Bold"
           Grid.Row="3"
           Grid.Column="0"
                                FontSize="20"

                    LineBreakMode="WordWrap"
                                     Command="{Binding StartTechWorkout}" 
CommandParameter="LONGRANGE FIGHTER"
                                      x:Name="LongRangeButton"

           />



    </Grid>

    <!-- Obrázek -->

</ContentPage>
