<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trener.AboutFW"
             BackgroundImageSource="room.png"
             xmlns:lang="clr-namespace:Trener.Resources.Languages">

    <ScrollView>
        <Frame BackgroundColor="#AAFFFFFF" 
               Padding="20"
               CornerRadius="15"
               HasShadow="True"
               Margin="20">

            <VerticalStackLayout Spacing="15">
                <Label Text="{x:Static lang:objectsStrings.FreestyleDesc}"
            FontSize="16"
            TextColor="Black"
            LineBreakMode="WordWrap"/>
                
                <Label Text="{x:Static lang:objectsStrings.Freestyle1Desc}"
                       FontSize="16"
                       TextColor="Black"
                       LineBreakMode="WordWrap"/>

                <Label Text="{x:Static lang:objectsStrings.Freestyle2Desc}"
                       FontSize="16"
                       TextColor="Black"
                       LineBreakMode="WordWrap"/>
                
                <Label Text="{x:Static lang:objectsStrings.CircuitDesc}"
              FontSize="16"
              TextColor="Black"
              LineBreakMode="WordWrap"/>


                <Label Text="{x:Static lang:objectsStrings.Circuit1Desc}"
                       FontSize="16"
                       TextColor="Black"
                       LineBreakMode="WordWrap"/>

                <Label Text="{x:Static lang:objectsStrings.Circuit2Desc}"
                       FontSize="16"
                       TextColor="Black"
                       LineBreakMode="WordWrap"/>
            </VerticalStackLayout>

        </Frame>
    </ScrollView>
</ContentPage>
