<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Trener"
xmlns:lang="clr-namespace:Trener.Resources.Languages"
             x:Class="Trener.Menu0Page"
             Title="TRENER"
             NavigationPage.HasBackButton="True">

    <ContentPage.BindingContext>
        <local:YourViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Image Source="trena.png" 
               Aspect="AspectFill" 
               HorizontalOptions="FillAndExpand" 
               VerticalOptions="FillAndExpand"/>

        <StackLayout HorizontalOptions="Start" VerticalOptions="Center">
            <Button Text="START" Margin="10,5" FontSize="40" 
                    BackgroundColor="Red"
                    TextColor="White"
                    BorderColor="White"
                    BorderWidth="2" 
                    FontAttributes="Bold"
                    Command="{Binding NavigateCommandToRight}" 
                    CommandParameter="START"
                    />

            <!-- Použití lokalizovaného textu -->


            <Button Text="{x:Static lang:strings.AboutAppButton}"
                    BackgroundColor="Red" 
                    BorderColor="White"
                    BorderWidth="2" 
                    FontAttributes="Bold"
                    Command="{Binding NavigateCommandToRight}" 
                    CommandParameter="ABOUT APP"
                    x:Name="AboutAppButton"
                    />

            <Button Text="{x:Static lang:strings.ProgressButton}"
                    BackgroundColor="Red"
                    BorderColor="White"
                    BorderWidth="2" 
                    TextColor="White"
                    FontAttributes="Bold"
                    Command="{Binding NavigateCommandToRight}" 
                    CommandParameter="PROGRESS"
                     x:Name="ProgressButton"
                    />

            <Button Text="{x:Static lang:strings.QuitButton}"
                    BackgroundColor="Red"
                    BorderColor="White"
                    BorderWidth="2" 
                    TextColor="White"
                    FontAttributes="Bold"
                    Command="{Binding NavigateCommandToRight}" 
                    CommandParameter="QUIT"
                     x:Name="QuitButton"
                    />
        </StackLayout>
    </Grid>
</ContentPage>
