<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trener.ViewOwnWorkouts"
                          xmlns:lang="clr-namespace:Trener.Resources.Languages"

             >
    <ScrollView>

        <VerticalStackLayout>
            <Label Text="{x:Static lang:objectsStrings.SelectAWorkout}" 

                   
                   x:Name="workout_label" FontSize="40"  FontAttributes="Bold" 
            VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand" 
                                      Margin="0,20,0,0"
BackgroundColor="#6200EE"
                   TextColor="White"
                   Padding="10"
                   />

        <!-- StackLayout pro tlačítka -->
        <StackLayout x:Name="WorkoutButtonsStackLayout"
                     VerticalOptions="StartAndExpand"
                                        Margin="0,20,0,0"
                     
                     HorizontalOptions="CenterAndExpand">
        </StackLayout>
    </VerticalStackLayout>

        </ScrollView>


</ContentPage>
