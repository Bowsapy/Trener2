<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trener.ActionPage"
             NavigationPage.HasBackButton="False"
             xmlns:lang="clr-namespace:Trener.Resources.Languages"
             xmlns:local="clr-namespace:Trener"
             BackgroundImageSource="trener2.png">

    <Grid Padding="0" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <!-- Horní prázdný prostor -->
            <RowDefinition Height="Auto"/>
            <!-- Hlavní obsah -->
            <RowDefinition Height="Auto"/>
            <!-- Info -->
            <RowDefinition Height="Auto"/>
            <!-- Počítadla -->
            <RowDefinition Height="Auto"/>
            <!-- Ovládací tlačítka -->
        </Grid.RowDefinitions>

        <!-- Hlavní textová část -->
        <Grid Grid.Row="1" Padding="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Frame BackgroundColor="MediumPurple"
       Padding="10"
       CornerRadius="15"
       HasShadow="True"
       HeightRequest="170"
       VerticalOptions="Start"
       HorizontalOptions="FillAndExpand">
                <Label x:Name="strike_label" 
           FontAttributes="Bold"
           FontSize="50"
           VerticalTextAlignment="Center"
           HorizontalTextAlignment="Center"
           TextColor="Black"/>
            </Frame>

            <Frame BackgroundColor="#512BD4"
       Padding="15"
       CornerRadius="10"
       HasShadow="True"
       Grid.Row="1">
                <Label x:Name="combo_label" 
           TextColor="White"
           FontAttributes="Bold"
           FontSize="52"
           VerticalTextAlignment="Center"
           HorizontalTextAlignment="Center"
           HeightRequest="210"
           LineBreakMode="WordWrap"
           MaxLines="2"
           VerticalOptions="FillAndExpand"
           HorizontalOptions="FillAndExpand"
           />
            </Frame>

        </Grid>

        <!-- Informace o cvičení -->
        <Grid Grid.Row="2" Padding="10" ColumnSpacing="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Frame BackgroundColor="Beige"
       Padding="0"
                              Grid.Column="0"

       CornerRadius="10"
       HasShadow="True">
                <Label Text="{Binding Source={x:Static lang:objectsStrings.timeText}}"
           FontSize="20"
                                  BackgroundColor="White"
           Grid.Column="0"
           FontAttributes="Bold"
           TextColor="Purple" />
            </Frame>
            <Frame BackgroundColor="Beige"
       Padding="0"
       CornerRadius="10"
                                                         Margin="30,0,0,0"

                              Grid.Column="2"

       HasShadow="True">

                <Label Text="{Binding Source={x:Static lang:objectsStrings.repText}}"
           FontSize="20"
           Grid.Column="1"
                       BackgroundColor="White"

           FontAttributes="Bold"
            TextColor="Purple" />
                
            </Frame>

            <Frame BackgroundColor="Beige"
                              Grid.Column="4"

       Padding="0"
       CornerRadius="10"
                                      Margin="20,0,0,0"

       HasShadow="True">
                <Label Text="{Binding Source={x:Static lang:objectsStrings.countText}}"
           FontSize="20"
           FontAttributes="Bold"
                       BackgroundColor="White"
           TextColor="Purple" />
            </Frame>

        </Grid>

        <!-- Dynamické hodnoty -->
        <Grid Grid.Row="3" Padding="0" ColumnSpacing="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="time_label" 
                   Text="0/0"
                   BackgroundColor="Beige"
                   FontSize="30"
                   Grid.Column="0"
                   Margin="5,0,0,0"
                   Padding="10"
                   TextColor="Purple"/>
            <Label x:Name="rep_label" 
                   Text="0/0"
                   BackgroundColor="Beige"
                   FontSize="30"
                   Grid.Column="1"
                   Margin="10,0,0,0"
                   Padding="10"
                   TextColor="Purple"/>
            <Label x:Name="count_label" 
                   Text="0/0"
                   BackgroundColor="Beige"
                   FontSize="30"
                   Grid.Column="2"
                   Margin="0,0,0,0"
                   Padding="10"
                   TextColor="Purple" />
        </Grid>

        <!-- Ovládací tlačítka -->
        <Grid Grid.Row="4" Padding="10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Text="{Binding Source={x:Static lang:objectsStrings.pauseText}}"
                    Clicked="StopFunc"
                    Grid.Column="0"

                    BackgroundColor="MediumPurple"
                    TextColor="White" />
            <Button Text="{Binding Source={x:Static lang:objectsStrings.skipText}}"
                    Clicked="SkipFunc"
                    Grid.Column="1"
                    BackgroundColor="MediumPurple"
                    TextColor="White" />
            <Button Text="{Binding Source={x:Static lang:objectsStrings.endText}}"
                    Clicked="EndFunc"
                    Grid.Column="2"
                    BackgroundColor="MediumPurple"
                    TextColor="White" />
        </Grid>
    </Grid>
</ContentPage>
