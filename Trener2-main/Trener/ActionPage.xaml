<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trener.ActionPage"
             BackgroundImageSource="trener2.png">

    <Grid Padding="0" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/> <!-- Horní prázdný prostor -->
            <RowDefinition Height="Auto"/> <!-- Hlavní obsah -->
            <RowDefinition Height="Auto"/> <!-- Info -->
            <RowDefinition Height="Auto"/> <!-- Počítadla -->
            <RowDefinition Height="Auto"/> <!-- Ovládací tlačítka -->
        </Grid.RowDefinitions>

        <!-- Hlavní textová část -->
        <Grid Grid.Row="1" Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label x:Name="strike_label" 
                   BackgroundColor="BlueViolet"
                   FontAttributes="Bold"
                   FontSize="100"
                   VerticalOptions="Start"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   HeightRequest="350"
                   HorizontalOptions="FillAndExpand"/>

            <Label x:Name="combo_label" 
                   BackgroundColor="Blue"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="80"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   HeightRequest="210"
                   LineBreakMode="WordWrap"
                   MaxLines="2"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand"
                   Grid.Row="1"/>
        </Grid>

        <!-- Informace o cvičení -->
        <Grid Grid.Row="2" Padding="10" ColumnSpacing="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Text="TIME" BackgroundColor="Beige" FontSize="20" Grid.Column="0"/>
            <Label Text="REP" BackgroundColor="Beige" FontSize="20" Grid.Column="1"/>
            <Label Text="COUNT" BackgroundColor="Beige" FontSize="20" Grid.Column="2"/>
            <Label Text="ROUND" BackgroundColor="Beige" FontSize="20" Grid.Column="3"/>
        </Grid>

        <!-- Dynamické hodnoty -->
        <Grid Grid.Row="3" Padding="10" ColumnSpacing="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="time_label" Text="5:23" BackgroundColor="Beige" FontSize="30" Grid.Column="0"/>
            <Label x:Name="rep_label" Text="1/3" BackgroundColor="Beige" FontSize="30" Grid.Column="1"/>
            <Label x:Name="count_label" Text="12/30" BackgroundColor="Beige" FontSize="30" Grid.Column="2"/>
            <Label x:Name="round_label" Text="1/3" BackgroundColor="Beige" FontSize="30" Grid.Column="3"/>
        </Grid>

        <!-- Ovládací tlačítka -->
        <Grid Grid.Row="4" Padding="10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Text="Pause" Clicked="StopFunc" Grid.Column="0"/>
            <Button Text="Skip" Clicked="SkipniFunc" Grid.Column="1"/>
            <Button Text="End" Clicked="EndFunc" Grid.Column="2"/>
        </Grid>

    </Grid>
</ContentPage>
