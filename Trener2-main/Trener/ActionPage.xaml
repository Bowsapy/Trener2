<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trener.ActionPage"
                          NavigationPage.HasBackButton="False"
                xmlns:lang="clr-namespace:Trener.Resources.Languages"

   xmlns:local="clr-namespace:Trener"
             
    BackgroundImageSource="trener2.png">
            

    <Grid Padding="0" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/> <!-- Horní prázdný prostor -->
            <RowDefinition Height="Auto"/> <!-- Hlavní obsah -->
            <RowDefinition Height="Auto"/> <!-- Info -->
            <RowDefinition Height="Auto"/> <!-- Počítadla -->
            <RowDefinition Height="Auto"/> <!-- Ovládací tlačítka -->
        </Grid.RowDefinitions>

        <!-- Hlavní textová část -->
        <Grid Grid.Row="1" Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <Label x:Name="strike_label" 
BackgroundColor="MediumPurple"                   FontAttributes="Bold"
                   FontSize="50"
                    
                   
         
                   VerticalOptions="Start"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   HeightRequest="170"
                   HorizontalOptions="FillAndExpand"
                  
                   />

            <Label x:Name="combo_label" 
BackgroundColor="#512BD4"                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="80"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   HeightRequest="210"
                   LineBreakMode="WordWrap"
                   MaxLines="2"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand"
                   
                   Grid.Row="1"/>
        </Grid>

        <!-- Informace o cvičení -->
        <Grid Grid.Row="2" Padding="10" ColumnSpacing="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Text="{Binding Source={x:Static lang:objectsStrings.timeText}}" BackgroundColor="Beige" FontSize="20" Grid.Column="0" />
            <Label Text="{Binding Source={x:Static lang:objectsStrings.repText}}" BackgroundColor="Beige" FontSize="20" Grid.Column="1" Margin="50,0,0,0" />
            <Label Text="{Binding Source={x:Static lang:objectsStrings.countText}}" BackgroundColor="Beige" FontSize="20" Grid.Column="2" Margin="40,0,0,0"/>
        </Grid>

        <!-- Dynamické hodnoty -->
        <Grid Grid.Row="3" Padding="0" ColumnSpacing="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="time_label" Text="5:23" BackgroundColor="Beige" FontSize="30" Grid.Column="0" Margin="5,0,0,0"/>
            <Label x:Name="rep_label" Text="1/3" BackgroundColor="Beige" FontSize="30" Grid.Column="1" Margin="25,0,0,0"/>
            <Label x:Name="count_label" Text="12/30" BackgroundColor="Beige" FontSize="30" Grid.Column="2" Margin="25,0,0,0" />
        </Grid>

        <!-- Ovládací tlačítka -->
        <Grid Grid.Row="4" Padding="10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Text="{Binding Source={x:Static lang:objectsStrings.pauseText}}" Clicked="StopFunc" Grid.Column="0"/>
            <Button Text="{Binding Source={x:Static lang:objectsStrings.skipText}}" Clicked="SkipniFunc" Grid.Column="1"/>
            <Button Text="{Binding Source={x:Static lang:objectsStrings.endText}}" Clicked="EndFunc" Grid.Column="2"/>
        </Grid>

    </Grid>
</ContentPage>
